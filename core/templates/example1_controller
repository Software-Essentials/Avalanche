// Imports
const { AVAController, AVAStorage } = require("avacore");



class MainController extends AVAController {

  /**
   *
   */
  index(request, response) {
    const storage = new AVAStorage();
    const zone = storage.getRecordZone("Post");
    response.json({
      success: true,
      message: "Showing all records.",
      data: zone.getRecords()
    });
  }

  /**
   *
   */
  show(request, response) {
    const index = request.query.id;
    const storage = new AVAStorage();
    const zone = storage.getRecordZone("Post");
    response.json({
      success: true,
      message: "Showing record.",
      data: zone.getRecordAtIndex(index)
    });
  }

  /**
   *
   */
  store(request, response) {
    response.json({
      success: true,
      message: "Record added."
    });
  }

  /**
   *
   */
  update(request, response) {
    response.json({
      success: true,
      message: "Record updated."
    });
  }

  /**
   *
   */
  destroy(request, response) {
    response.json({
      success: true,
      message: "Record deleted."
    });
  }

}



module.exports = MainController;
